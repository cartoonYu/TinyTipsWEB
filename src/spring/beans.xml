<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="comment" class="bean.table.Comment"/>
    <bean id="information" class="bean.table.Information"/>
    <bean id="note" class="bean.table.Note"/>
    <bean id="social" class="bean.table.Social"/>

    <bean id="operateComment" class="bean.table.operate.OperateComment"
        p:operateDB-ref="operateDB"
        p:tableName="Comment"
        p:currentTime-ref="currentTime"/>
    <bean id="operateInformation" class="bean.table.operate.OperateInformation"
        p:operateDB-ref="operateDB"
        p:tableName="Information"
        p:ls-ref="listAndString"
        p:fileOperation-ref="fileOperation"
        p:imageConstant-ref="imageConstant"
        p:currentTime-ref="currentTime"/>
    <bean id="operateNote" class="bean.table.operate.OperateNote"
          p:operateDB-ref="operateDB"
          p:tableName="Note"
          p:ls-ref="listAndString"
          p:fileOperation-ref="fileOperation"
          p:imageConstant-ref="imageConstant"
          p:currentTime-ref="currentTime"/>
    <bean id="operateSocial" class="bean.table.operate.OperateSocial"
          p:currentTime-ref="currentTime"
          p:db-ref="operateDB"/>

    <bean id="commentDetails" class="bean.view.CommentDetails"/>
    <bean id="statSocial" class="bean.view.StatSocial"/>

    <bean id="checkSocial" class="bean.view.check.CheckStatSocial"
        p:db-ref="operateDB"
        p:fileOperation-ref="fileOperation"
        p:imageConstant-ref="imageConstant"
        p:ls-ref="listAndString"
        p:viewName="Social"/>
    <bean id="checkCommentDetails" class="bean.view.check.CheckCommentDetails"
        p:imageConstant-ref="imageConstant"
        p:fileOperation-ref="fileOperation"
        p:db-ref="operateDB"
        p:viewName="CommentDetails"/>

    <bean id="getContext" class="spring.GetContext"/>

    <bean id="dbConnection" class="sql.DBConnection"/>
    <bean id="operateDB" class="sql.OperateDB"
          p:connection-ref="dbConnection"/>

    <bean id="fileOperation" class="util.file.FileOperation"
        p:coder-ref="coder"
        p:getUUID-ref="getUUID"/>
    <bean id="imageConstant" class="util.file.ImageConstant"/>
    <bean id="coder" class="util.file.Coder"/>

    <bean id="jsonArrayOperation" class="util.JSON.JSONArrayOperation"/>
    <bean id="jsonObjectOperation" class="util.JSON.JSONObjectOperation"/>

    <bean id="requestAndResponse" class="util.network.RequestAndResponse"
        p:arrayOperation-ref="jsonArrayOperation"/>

    <bean id="currentTime" class="util.CurrentTime"/>
    <bean id="getUUID" class="util.GetUUID"/>
    <bean id="judgeEmpty" class="util.JudgeEmpty"/>
    <bean id="listAndString" class="util.ListAndString"/>
    <bean id="mapAndString" class="util.MapAndString"/>

    <context:property-override location="sql/dbconn.properties"/>
    <context:property-override location="util/file/imagePath.properties"/>

</beans>